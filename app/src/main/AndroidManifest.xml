<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aesc.proyectofinaldesarrollomovil">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoFinalDesarrolloMovil">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ui.activities.AboutUsActivity"
            android:exported="true"
            android:theme="@style/Theme.ProyectoFinalDesarrolloMovil.NoActionBar"/>

        <activity
            android:name=".ui.activities.DeleteAccountActivity"
            android:exported="true"
            android:theme="@style/Theme.ProyectoFinalDesarrolloMovil.NoActionBar" />
        <activity
            android:name=".ui.activities.UpdatePasswordActivity"
            android:exported="true"
            android:theme="@style/Theme.ProyectoFinalDesarrolloMovil.NoActionBar" />
        <activity
            android:name=".ui.activities.AccountRecoveryActivity"
            android:exported="true"
            android:theme="@style/Theme.ProyectoFinalDesarrolloMovil.NoActionBar" />
        <activity
            android:name=".ui.activities.CheckEmailActivity"
            android:exported="true"
            android:label="@string/title_activity_check_email"
            android:theme="@style/Theme.ProyectoFinalDesarrolloMovil.NoActionBar" />
        <activity
            android:name=".ui.activities.SignInActivity"
            android:exported="true"
            android:theme="@style/Theme.ProyectoFinalDesarrolloMovil.NoActionBar" />
        <activity
            android:name=".ui.activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.ProyectoFinalDesarrolloMovil.NoActionBar" />
        <activity
            android:name=".ui.activities.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>